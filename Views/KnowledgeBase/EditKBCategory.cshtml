@using EmployeeHelpDeskWebApp.Enums
@model EmployeeHelpDeskWebApp.Models.KBCategory


<form method="post" asp-action="EditKBCategory">
    <div class="container p-3 border">
        <div class="row pt-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-6">
                <h2 class="text-primary">Редактирование категории</h2>
            </div>

        </div>

        <br />

        <div class="form-group row pb-3">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row pb-2">
            <div class="d-flex justify-content-end">
                <a asp-action="AddFile" asp-route-Id="@Model.Id" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> &nbsp; Добавить файл
                </a>
            </div>
        </div>


        @if (Model.Files.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            Дата добавления
                        </th>
                        <th>
                            Название
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.Files)
                    {
                        <tr>
                            <td width="20%">@obj.DateAdded</td>
                            <td width="75%">@obj.Name</td>
                            <td class="text-center">
                                <div class="w-55 btn-group" role="group">
                                    <a asp-controller="KnowledgeBase" asp-route-Id="@obj.Id" asp-action="EditFile" class="btn btn-primary mx-1">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="KnowledgeBase" asp-route-Id="@obj.Id" asp-action="DeleteFile" class="btn btn-danger mx-1">
                                        <i class="fa-solid fa-trash"></i> 
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">Файлы отсутствуют.</p>
        }

        <br />

        <div class="row">
            <div class="col-9">
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100 text-light" value="Сохранить" />
                        </div>
                        <div class="col">
                            <a asp-action="Management" class="btn btn-primary w-100"><i class="fa-solid fa-arrow-right-from-bracket"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}