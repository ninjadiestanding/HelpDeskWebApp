@model EmployeeHelpDeskWebApp.Models.KBFileModel

<form method="post" asp-action="DeleteFileConfirm" class="container" style="width: 80%;">

    <input asp-for="Id" hidden />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-primary pl-3">Удаление файла</h2>
        </div>

        <div class="row">
            <div class="col-9">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>

                <br />

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100 text-light" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="EditKBCategory" asp-route-Id="@Model.KBCategoryId" class="btn btn-primary w-100"><i class="fa-solid fa-arrow-right-from-bracket"></i> Назад</a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}