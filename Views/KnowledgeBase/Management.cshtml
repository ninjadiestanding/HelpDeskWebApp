@model IEnumerable<EmployeeHelpDeskWebApp.Models.KBCategory>

<div class="container p-3" style="width: 80%">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список категорий базы знаний</h2>
        </div>
        <div class="d-flex justify-content-end">
            <a asp-action="CreateKBCategory" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Создать
            </a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Наименование
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="90%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-55 btn-group" role="group">
                                <a asp-controller="KnowledgeBase" asp-route-Id="@obj.Id" asp-action="EditKBCategory" class="btn btn-primary mx-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="KnowledgeBase" asp-route-Id="@obj.Id" asp-action="DeleteKBCategory" class="btn btn-danger mx-1">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Категорий не существует</p>
    }
</div>