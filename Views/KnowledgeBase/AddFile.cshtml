@using EmployeeHelpDeskWebApp.Enums
@model EmployeeHelpDeskWebApp.Models.KBCategory


<form method="post" enctype="multipart/form-data" asp-action="AddFile" class="container" style="width: 80%;">
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-primary pl-3">Добавление файла</h2>
        </div>

        <div class="row">
            <div class="col-9">

                <input asp-for="Id" hidden />
                <input asp-for="Name" hidden />

                <div class="form-group row pb-3">
                    <div class="col-4">
                        <label asp-for="FileName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FileName" class="form-control">
                        <span asp-validation-for="FileName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        Прикрепить файл
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" class="form-control" />
                    </div>
                </div>

                <br />

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100 text-light" value="Добавить" />
                        </div>
                        <div class="col">
                            <a asp-action="EditKBCategory" asp-route-Id="@Model.Id" class="btn btn-primary w-100"><i class="fa-solid fa-arrow-right-from-bracket"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>
    </div>
    <br />
</form>

<br />

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}