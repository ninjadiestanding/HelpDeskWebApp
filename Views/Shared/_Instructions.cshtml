@model IEnumerable<EmployeeHelpDeskWebApp.Models.KBFileModel>


<div class="col-8 filter @Model.">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Дата добавления
                    </th>
                    <th>
                        Наименование
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.DateAdded</td>
                        <td width="60%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-55 btn-group" role="group">
                                <a asp-controller="TaskType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i> Загрузить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Файлы отсутствуют.</p>
    }
</div>