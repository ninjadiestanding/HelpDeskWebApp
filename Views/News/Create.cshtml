@using EmployeeHelpDeskWebApp.Enums
@model EmployeeHelpDeskWebApp.Models.News


<form method="post" enctype="multipart/form-data" asp-action="Create" class="container" style="width: 80%;">
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-primary pl-3">Создание новости</h2>
        </div>

        <div class="row">
            <div class="col-9">

                <input asp-for="ApplicationUserId" hidden />

                <input asp-for="DateOfWriting" hidden />

                <div class="form-group row pb-3">
                    <div class="col-4">
                        <label asp-for="Message"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Message" class="form-control summernote"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        Прикрепить файлы
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                    </div>
                </div>

                <br />

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100 text-light" value="Отправить" />
                        </div>
                        <div class="col">
                            <a asp-action="Management" class="btn btn-primary w-100"><i class="fa-solid fa-arrow-right-from-bracket"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>
    </div>
    <br />
</form>

<br />

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                width: 700
            });
        });
    </script>
}