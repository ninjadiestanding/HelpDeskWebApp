@model IEnumerable<EmployeeHelpDeskWebApp.Models.News>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Управление новостными записями</h2>
        </div>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Создать
            </a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Дата создания
                    </th>
                    <th>
                        Автор
                    </th>
                    <th>
                        Сообщение
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="17%">@obj.DateOfWriting</td>
                        <td width="20%">@obj.ApplicationUser</td>
                        <td width="70%">@obj.Message</td>
                        <td class="text-center">
                            <div class="w-55 btn-group" role="group">
                                <a asp-controller="News" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="News" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Новости отсутствуют</p>
    }
</div>